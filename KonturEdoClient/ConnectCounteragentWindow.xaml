<Window x:Class="KonturEdoClient.ConnectCounteragentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonturEdoClient"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Подключение контрагента" Height="160" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <Label Margin="5 0" Width="120" Content="Юр. лицо" />
                <dxg:LookUpEdit Width="350" ItemsSource="{Binding RefCustomers}" PopupWidth="1200" PopupHeight="600"
                                SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                DisplayMember="Name" ImmediatePopup="True" AutoPopulateColumns="False">
                    <dxg:LookUpEdit.PopupContentTemplate>
                        <ControlTemplate TargetType="{x:Type ContentControl}">
                            <dxg:GridControl x:Name="PART_GridControl" ShowBorder="False" >
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn Header="Id" Width="80" FieldName="Id"/>
                                    <dxg:GridColumn Header="Наименование" Width="110" FieldName="Name"/>
                                    <dxg:GridColumn Header="ИНН" Width="250" FieldName="Inn"/>
                                    <dxg:GridColumn Header="КПП" Width="60" FieldName="Kpp"/>
                                    <dxg:GridColumn Header="Директор" Width="*" FieldName="Director"/>
                                    <dxg:GridColumn Header="Адрес" Width="*" FieldName="Address"/>
                                </dxg:GridControl.Columns>
                                <dxg:GridControl.View>
                                    <dxg:TableView AllowPerPixelScrolling="True" 
                                                   ShowSearchPanelMode="Always"
                                                   AllowEditing="False" 
                                                   NavigationStyle="Row" 
                                                   ShowGroupPanel="False" 
                                                   ShowAutoFilterRow="True"/>
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </ControlTemplate>
                    </dxg:LookUpEdit.PopupContentTemplate>
                    <dxg:LookUpEdit.StyleSettings>
                        <dxg:SearchLookUpEditStyleSettings/>
                    </dxg:LookUpEdit.StyleSettings>
                </dxg:LookUpEdit>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <Label Margin="5 0" Width="120" Content="Идентификатор ЭДО" />
                <TextBox Text="{Binding FnsId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="350"/>
                <Button x:Name="ChangeCounteragentButton" Margin="5 0" Content="..." Width="35" Command="{Binding ChangeCounteragentCommand}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button x:Name="TransferToFilialsButton" Width="150" Margin="5" Content="Перенос на филиалы" Command="{Binding TransferToFilialsCommand}" />
            <Button x:Name="ConnectButton" Margin="5" Width="120" Content="Подключить" Command="{Binding ConnectCommand}" />
            <Button x:Name="CheckStatusButton" Margin="5" Width="120" Content="Проверить статус" Command="{Binding CheckConnectCommand}" />
            <Button x:Name="CancelButton" Margin="5" Width="80" Content="Отмена" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
