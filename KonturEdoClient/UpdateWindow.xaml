<Window x:Class="KonturEdoClient.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonturEdoClient"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Доступно обновление" Height="229.5" Width="572">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Image Margin="15 5" Source="pack://siteoforigin:,,,/Resources/diadok.png" Height="70" />
            <TextBlock VerticalAlignment="Center">
                <Run Name="versRun" />
                <LineBreak/>
                <Run>Обновить программу?</Run>
            </TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Margin="5 5" Content="Обновить" Click="UpdateButton_Click" />
            <Button Margin="5 5" Content="Отмена" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
